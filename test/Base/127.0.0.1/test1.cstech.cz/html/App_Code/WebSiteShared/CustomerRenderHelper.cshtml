@using EasyMarket.Server.ShopOrders.Data

@helper RenderCartOrderAddress(OrderCustomerFormData customerData) {
    if (customerData.IsOrganization) {
        <text>
            @customerData.Organization<br />
            @customerData.AddressStreet<br />
            @customerData.AddressPostCode @customerData.AddressCity<br />
        </text>
    } else {
        <text>
            @customerData.FirstName @customerData.LastName<br />
            @customerData.AddressStreet<br />
            @customerData.AddressPostCode @customerData.AddressCity<br />
        </text>
    }
}

@helper RenderCartDeliveryAddress(OrderCustomerFormData customerData) {
    if (customerData.RecipientEnabled) {
        if (customerData.IsOrganization) {
            <text>
                @customerData.RecipientOrganization<br />
                @customerData.RecipientAddressStreet<br />
                @customerData.RecipientAddressPostCode @customerData.RecipientAddressCity<br />
            </text>
        } else {
            <text>
                @customerData.RecipientFirstName @customerData.RecipientLastName<br />
                @customerData.RecipientAddressStreet<br />
                @customerData.RecipientAddressPostCode @customerData.RecipientAddressCity<br />
            </text>
        }
    } else {
        if (customerData.IsOrganization) {
            <text>
                @customerData.Organization<br />
                @customerData.AddressStreet<br />
                @customerData.AddressPostCode @customerData.AddressCity<br />
            </text>
        } else {
            <text>
                @customerData.FirstName @customerData.LastName<br />
                @customerData.AddressStreet<br />
                @customerData.AddressPostCode @customerData.AddressCity<br />
            </text>
        }
    }
}
